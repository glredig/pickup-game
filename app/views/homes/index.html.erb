<div id="wrapper">
	<% if @next_game.date.today? %>
		<% days_count = "Today" %>
	<% else %>
		<% days_count = "#{distance_of_time_in_words(Date.today, date_of_next("Monday"))}" %>
	<% end %>
	<p style="color: #ffffff; font-weight: 100; line-height: 1.5em; font-size: 1.5em">
		Please bring at least $3 to play. The ability to keep the games going is dependent on getting more contributions.
	</p>
	<h1>Next game: <%= @next_game.date.strftime("%b %d") %></h1>
	<div id="checkin_wrapper">
		<a id="check_in" href="#" data-game-id="<%= @next_game.try(:id) %>" data-checkin-url="<%= players_url %>">CHECK IN</a>
		<div id="players_wrapper">
			<ul class='player_list'>
				<% if @next_game.present? && @next_game.players.present? %>
						<% @next_game.players.order("attending DESC").each do |player| %>
							<li id="<%= player.id %>" class="<%= player.attending? ? 'attending' : 'not_attending' %>" data-update-url="<%= player_url(player) %>">
								<%= player.name %>
							</li>
						<% end %>
				<% else %>
					<span id="no_players">Nobody has checked in</span>
				<% end %>
			</ul>
		</div>
	</div>
</div>
